# =============================================================================
# HCP Web Crawler â€” Environment Configuration
# =============================================================================

# LLM Provider: "azure_openai" or "openai"
LLM_PROVIDER=azure_openai

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-10-21

# OpenAI (fallback)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Database (SQLite for local dev, PostgreSQL for prod)
# DATABASE_URL=sqlite+aiosqlite:///./hcp_crawler.db
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/hcp_crawler

# Agent Configuration
MAX_CONCURRENT_BROWSERS=3
MAX_RESULTS_PER_HCP=5
CONFIDENCE_THRESHOLD=70
SEARCH_TIMEOUT_SECONDS=30
PAGE_LOAD_TIMEOUT_SECONDS=15

# Impact Metrics
MANUAL_MINUTES_PER_RECORD=15
HOURLY_RATE_USD=50

# Application
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:8501"]
